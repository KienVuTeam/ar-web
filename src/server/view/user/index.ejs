    });

    var selectedTextNode = null;
    // 4. T·∫°o s·∫µn c√°c text-box c·ªë ƒë·ªãnh (mapping DB field)
    const fixedFields = [
      { field: "name", label: "T√™n" },
      { field: "dob", label: "Ng√†y sinh" },
      { field: "address", label: "ƒê·ªãa ch·ªâ" },
