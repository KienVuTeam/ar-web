        });
      layer.add(konvaImg);
      konvaImg.moveToBottom();
      // üî• V·∫Ω l∆∞·ªõi full theo ·∫£nh
      drawGrid(50, originalImageWidth, originalImageHeight);

      layer.batchDraw();
      }
      imageObj.src = url;
    }
    //
    

    // layer.add(background); bo
