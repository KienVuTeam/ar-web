    .chips{display:flex; flex-wrap:wrap; gap:8px; margin-top:8px}
    .chip{padding:6px 10px; border-radius:999px; font-size:.8rem; background:rgba(255,255,255,.06); border:1px solid rgba(255,255,255,.08); color:var(--muted)}
    .hide{display:none}

    /* Responsive */
    @media (max-width: 980px){
      .hero .grid, .story, .contact{grid-template-columns:1fr}
      .why, .services{grid-template-columns:repeat(2,1fr)}
      .testi{grid-template-columns:1fr 1fr}
      .menu{display:none}
      .burger{display:block}
      .mobile{position:absolute; left:0; right:0; top:60px; background:rgba(11,15,25,.95); border-bottom:1px solid rgba(255,255,255,.06)}
      .mobile a{display:block; padding:14px 20px; border-top:1px solid rgba(255,255,255,.06); color:var(--muted)}
    }
    @media (max-width: 620px){
      .why, .services{grid-template-columns:1fr}
      .testi{grid-template-columns:1fr}
    }
