  <script>
    // Mobile menu
    function toggleMenu(){
      const m = document.getElementById('mobileMenu');
      m.classList.toggle('hide');
    }

    // Back to top visibility
    const toTop = document.getElementById('toTop');
    window.addEventListener('scroll',()=>{
      toTop.style.display = window.scrollY > 600 ? 'block' : 'none'
    });
    toTop.addEventListener('click',()=>window.scrollTo({top:0, behavior:'smooth'}));

    // Testimonial auto-scroll (simple carousel feel)
    const list = document.getElementById('testiList');
    let offset = 0; let itemsPerView = () => (window.innerWidth<=620?1: window.innerWidth<=980?2:3);
    setInterval(()=>{
      const total = list.children.length;
      offset = (offset+1) % Math.max(1, total - itemsPerView() + 1);
      list.style.transform = `translateX(-${offset * (100 / itemsPerView())}%)`;
      list.style.transition = 'transform 600ms ease';
    }, 3800);

    // Set year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Fake submit
    function submitForm(e){
      e.preventDefault();
      const data = Object.fromEntries(new FormData(e.target).entries());
      alert('Đã nhận yêu cầu!\n\n' + JSON.stringify(data, null, 2) + '\n\n→ Tích hợp API/email theo hệ thống của bạn.');
      e.target.reset();
    }

    // Intersection reveal
    const reveal = new IntersectionObserver((entries)=>{
      entries.forEach(el=>{
        if(el.isIntersecting){
          el.target.animate([
            {opacity:0, transform:'translateY(10px)'},
            {opacity:1, transform:'translateY(0)'}
          ], {duration:500, easing:'ease', fill:'forwards'});
          reveal.unobserve(el.target);
        }
      })
    }, {threshold:.08});
    document.querySelectorAll('section .container > *').forEach(el=>reveal.observe(el));
  </script>
