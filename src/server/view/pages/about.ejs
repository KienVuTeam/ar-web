    .card h3{margin:10px 0 8px; font-size:1.08rem}
    .card p{margin:0; color:var(--muted)}
    .pill{display:inline-block; padding:6px 10px; border-radius:999px; border:1px solid rgba(255,255,255,.14); font-size:.8rem; color:var(--muted)}

    /* Story */
    .story{display:grid; grid-template-columns:1.1fr .9fr; gap:24px; align-items:center}
    .story .panel{background:var(--card); border:1px solid rgba(255,255,255,.08); border-radius:var(--radius); padding:20px}
