    .hero-actions{display:flex; gap:14px; margin-top:22px; flex-wrap:wrap}
    .ghost{padding:10px 16px; border-radius:999px; border:1px solid rgba(255,255,255,.16); color:var(--text); background:transparent}
    .statbar{display:grid; grid-template-columns:repeat(3,1fr); gap:14px; margin-top:28px}
    .stat{
