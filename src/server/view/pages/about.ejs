    }
    .cta h3{margin:0 0 8px; font-size:clamp(20px,3vw,28px)}
    .cta p{margin:0 0 14px; color:var(--muted)}

    /* Contact */
    .contact{display:grid; grid-template-columns:1.1fr .9fr; gap:20px}
    form{display:grid; gap:12px}
    input, textarea{width:100%; padding:12px 14px; border-radius:12px; border:1px solid rgba(255,255,255,.12);
