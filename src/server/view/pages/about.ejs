    .btn-primary{padding:12px 16px; border-radius:12px; background:linear-gradient(135deg,var(--brand), var(--brand-2)); color:#08131b; border:0; font-weight:800}

    /* Footer */
    footer{padding:40px 0; color:var(--muted)}
