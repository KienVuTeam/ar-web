    .burger{display:none; background:none; border:0; color:var(--text); font-size:24px}

    /* Hero */
    .hero{position:relative; padding:72px 0 36px; overflow:hidden}
    .hero .grid{display:grid; grid-template-columns:1.2fr .8fr; gap:32px; align-items:center}
