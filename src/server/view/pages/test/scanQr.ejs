    .scanqr-container {
      /* /* flex-wrap: wrap; */
      height: 100vh;
      width: 100vw;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
    }
    #reader video {
      width: 100%;
      height: 100%;
      border-radius: 12px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
      object-fit: cover;
    }
  </style>

  <body>
    <div class="scanqr-container">
      <div class="">
        <h2>üì∑ Qu√©t m√£ QR b·∫±ng camera</h2>
