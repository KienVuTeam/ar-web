          // import data
          document
            .getElementById("btn-submit")
            .addEventListener("click", function (el) {
              el.preventDefault();

              const inputFile = document.getElementById("fileExcel");
              const file = inputFile.files[0];

              // ‚úÖ Validation file
              if (!file) {
                showError("Vui l√≤ng ch·ªçn file Excel!");
                return;
              }

              // ‚úÖ Ki·ªÉm tra file type
              const allowedTypes = [
                "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet",
                "application/vnd.ms-excel",
              ];
              if (!allowedTypes.includes(file.type)) {
                showError("Ch·ªâ cho ph√©p file Excel (.xlsx, .xls)!");
                return;
              }

              // ‚úÖ Ki·ªÉm tra file size (max 10MB)
              if (file.size > 10 * 1024 * 1024) {
                showError("File qu√° l·ªõn! Vui l√≤ng ch·ªçn file nh·ªè h∆°n 10MB.");
                return;
              }

              // ‚úÖ Hi·ªÉn th·ªã loading
              showLoading();

              const formData = new FormData();
              formData.append("excelFile", file);
              formData.append("ei", $("#ie_hidden").val());

              fetch("/admin/volunteer/upload-excel", {
                method: "POST",
                body: formData,
              })
                .then((res) => res.json())
                .then((data) => {
                  hideLoading();

                  if (data.success) {
                    showSuccess(
                      `Import th√†nh c√¥ng! ƒê√£ x√≥a ${data.data.deleted} b·∫£n ghi c≈© v√† th√™m ${data.data.inserted} b·∫£n ghi m·ªõi.`,
                    );
                    // ‚úÖ Reload trang ƒë·ªÉ hi·ªÉn th·ªã d·ªØ li·ªáu m·ªõi
                    setTimeout(() => {
                      window.location.reload();
                    }, 2000);
                  } else {
                    if (data.errors && data.errors.length > 0) {
                      showError(`D·ªØ li·ªáu kh√¥ng h·ª£p l·ªá:\n${data.errors.join("\n")}`);
                    } else {
                      showError(data.message || "Import th·∫•t b·∫°i!");
                    }
                  }

                  // ‚úÖ Hi·ªÉn th·ªã chi ti·∫øt k·∫øt qu·∫£
                  document.getElementById("result").innerHTML =
                    "<pre>" + JSON.stringify(data, null, 2) + "</pre>";
                })
                .catch((err) => {
                  hideLoading();
                  console.error("Import error:", err);
                  showError("L·ªói k·∫øt n·ªëi! Vui l√≤ng th·ª≠ l·∫°i.");
                });
            });

          // ‚úÖ Helper functions
          function showLoading() {
            const btn = document.getElementById("btn-submit");
            btn.disabled = true;
            btn.innerHTML =
              '<span class="spinner-border spinner-border-sm me-2"></span>ƒêang import...';
          }

          function hideLoading() {
            const btn = document.getElementById("btn-submit");
            btn.disabled = false;
            btn.innerHTML = "Save file";
          }

          function showError(message) {
            const result = document.getElementById("result");
            result.innerHTML = `<div class="alert alert-danger">${message}</div>`;
          }

          function showSuccess(message) {
            const result = document.getElementById("result");
            result.innerHTML = `<div class="alert alert-success">${message}</div>`;
          }

          //
        });
      </script>

